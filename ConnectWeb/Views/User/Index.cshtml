@model List<User>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>User List</h2>
        </div>
         <div class="col-6 text-end">
             <a asp-controller="User" asp-action="Create" class="btn btn-primary">  
                 <i class="bi bi-plus-circle"></i> &nbsp; Create User
             </a>
        </div>
    </div>
    <br /> <br />

<table class="table table-bordered table-stripped" style="width:100%">
    <thead>
        <tr>
            <th>
                Username
            </th>

            <th>
                Colleague Name
            </th>
            <th>
                User Type
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.username
                </td>
                <td width="30%">
                    @obj.firstName @obj.lastName
                </td>
                <td width="30%">
                    @obj.userTypeId
                </td>
                <td width="30%" class="text-end">
                    <a asp-controller="" asp-action="" class="btn btn-primary">
                        <i class="bi bi-arrow-right-square"></i> &nbsp; View
                    </a>
                     
                </td>
            </tr>
        }
    </tbody>
</table>
</div>