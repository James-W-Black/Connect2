@model User
@{
    Layout = "~/views/shared/_layoutLogin.cshtml";
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="logInBackground" style="background-image:
        url('https://thumbs.dreamstime.com/z/healthcare-technology-doctor-using-digital-tablet-icon-medical-network-hospital-background-162019727.jpg');">
    </div>
</div>

<form method="post">
    <div class="container" style="margin-top:150px">
        <div class="row pt-4 mt-10">         
             <div class="col-9 pt-5">
                 <h1>Connect</h1>
            </div>
            <div class="col-3  pt-5 pb-5" style="background-color:rgba(0, 0, 0,0.7)">

                <input asp-for="username" placeholder="Email" style="width:200px;  margin-left:45px" class="form-control"/>
                <br/>   <br/> 
                 <input asp-for="username" placeholder="Password" type="password" style="width:200px;margin-left:45px" class="form-control "/> 
                  <br/>  <br/> 
                 <a asp-controller="Home" asp-action="Index" style="margin-left:45px" class="btn btn-primary"> 
                     <i class="bi bi-arrow-right-square"></i> &nbsp; Login
                 </a>
                 
            </div>
        </div>
    </div>
</form>
